job "test" {
  datacenters = ["dc1"]

  # Grupo de tareas en modo 'system'
  group "main" {
    network {
#      mode = "bridge"
    }

    meta {
      EXTERNAL_IP = "10.10.10.1"
    }

    task "sample" {
      driver = "docker"
      config {
        image = "busybox:latest"
        command = "sh"
        args    = [
          "/bin/sleep", "infinity"
        ]
      }
    }
  }
}

